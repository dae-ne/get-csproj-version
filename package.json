{
  "name": "get-msbuild-version",
  "scripts": {
    "build": "ncc build src/main.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix --ext .ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && git add dist/index.js",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.ts": "npm run lint"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@xmldom/xmldom": "^0.8.10",
    "xpath": "^0.0.33"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.46.0",
    "husky": "^4.3.8",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
